{
  "info": {
    "name": "Enrollment API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Enrollments",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/enrollment",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment"]
        }
      }
    },
    {
      "name": "Get Enrollment by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/enrollment/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "ENROLLMENT_ID_HERE"
            }
          ]
        }
      }
    },
    {
      "name": "Create Free Enrollment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/enrollment",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"userId\": \"USER-3\",\n    \"courseId\": \"FREE-COURSE-3\",\n    \"isFree\": true\n}"
        }
      }
    },
    {
      "name": "Create Paid Enrollment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/enrollment",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"userId\": \"USER-3\",\n    \"courseId\": \"PAID-COURSE-3\",\n    \"isFree\": false\n}"
        }
      }
    },
    {
      "name": "Update Enrollment Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/enrollment/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "ENROLLMENT_ID_HERE"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"status\": \"COMPLETED\"\n}"
        }
      }
    },
    {
      "name": "Get User Enrollments",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/enrollment/user/:userId/courses",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment", "user", ":userId", "courses"],
          "variable": [
            {
              "key": "userId",
              "value": "USER-2"
            }
          ]
        }
      }
    },
    {
      "name": "Check Enrollment",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/enrollment/check/:userId/:courseId",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["enrollment", "check", ":userId", ":courseId"],
          "variable": [
            {
              "key": "userId",
              "value": "USER-2"
            },
            {
              "key": "courseId",
              "value": "PAID-COURSE-1"
            }
          ]
        }
      }
    }
  ]
}